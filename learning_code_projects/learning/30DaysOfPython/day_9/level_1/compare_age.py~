#!/usrs/bin/python3

"""Compare age to determine who is older or younger"""

your_age = int(input('enter your age: '))
my_age = 34 # defined age

if my_age > your_age:
    age_difference = my_age - your_age
    if age_difference == 1:
        print('You are',abs(age_difference), 'year older than me')
    else:
        print('You are',abs(age_difference), 'years younger than me')
elif your_age > my_age: 
    age_difference = your_age - my_age
    if age_difference == -1:
        print(f'You are {age_differnce} year older than me.')
    else:
        print(f'You are {age_difference} years older than me.')
else:
    print('We are the same age')
